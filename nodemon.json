{
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules", "build"],
    "exec": "ts-node src/main.ts",
    "env": {
      "NODE_ENV": "development",
      "CONFIG_PATH": "config.json"
    },
    "restartable": "rs",
    "delay": 1000,
    "verbose": true
  }